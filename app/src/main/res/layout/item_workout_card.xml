<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:backgroundTint="#D9D9D9"
    android:background="@drawable/shape_workout_container"
    android:layout_marginHorizontal="32dp"
    android:layout_marginVertical="32dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/workoutsIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workoutsTV"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/workoutsIV"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/workoutsB"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:text="Смотреть"
        android:background="@drawable/shape_workout_container"
        android:textColor="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/workoutsIV"
        app:layout_constraintTop_toBottomOf="@+id/workoutsTV"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>