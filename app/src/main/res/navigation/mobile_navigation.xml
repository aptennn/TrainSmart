<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_workouts">

    <fragment
        android:id="@+id/navigation_workouts"
        android:name="com.example.rainsmart.ui.workouts.WorkoutsFragment"
        android:label="@string/title_workouts"
        tools:layout="@layout/fragment_workouts">
        <action
            android:id="@+id/action_navigationWorkouts_to_navigationWorkoutDetails"
            app:destination="@id/navigation_workout_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_workout_details"
        android:name="com.example.rainsmart.ui.workouts.WorkoutsDetailsFragment"
        android:label="Workout Description">
        <argument
            android:name="imageResId"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_exercises"
        android:name="com.example.rainsmart.ui.exercises.ExercisesFragment"
        android:label="@string/title_exercises"
        tools:layout="@layout/fragment_exercises" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.rainsmart.ui.statistics.StatisticsFragment"
        android:label="@string/title_statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.rainsmart.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>